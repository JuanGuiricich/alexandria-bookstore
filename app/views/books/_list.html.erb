<div data-search-books-target="list" class="container row gap-4 justify-content-center">
  <% books.each do |book| %>
    <div class="card col-4" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%= "#{book.author.first_name} #{book.author.last_name}" %></h6>
        <p class="card-text"><%= book.publisher.name %></p>
        <p class="card-text"><%= book.review %></p>
        <a href="#" class="card-link"><%= book.price %></a>
      </div>
    </div>
  <% end %>
</div>
