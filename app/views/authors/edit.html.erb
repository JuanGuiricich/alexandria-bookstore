<div class="container">
  <h3>Edit <%= "#{@author.first_name} #{@author.last_name}" %></h3>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@author) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :date_of_birth %>
        <%= f.input :about %>
        <%= f.input :nationality %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
